<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<!--ThisRoof APP Theme-->
	<style name="AppTheme" parent="AppTheme.Base">
	</style>
	<style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/TR_DARK_BLUE</item>
		<item name="colorPrimaryDark">@color/TR_DARK_BLUE</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:colorAccent">#000000</item>
		<item name="android:colorControlActivated">@color/TR_DARK_BLUE</item>
		<item name="android:colorControlNormal">#000000</item>
		<item name="android:windowTranslucentStatus">true</item>
	</style>

	<!--This Roof Splash Style-->
	<style name="Theme.Splash" parent="android:Theme">
		<item name="android:windowNoTitle">true</item>
	</style>

	<!--Dialog Animation Style-->
	<style name="DialogAnimation">
		<item name="android:windowEnterAnimation">@anim/activity_slidein_left</item>
		<item name="android:windowExitAnimation">@anim/activity_slideout_right</item>
	</style>

	<!--Search Filter Modal Dialog Style-->
	<style name="SearchModalStyle" parent="@style/Theme.AppCompat.Light.Dialog" >
	    <item name="android:windowBackground">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowFrame">@null</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
	    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
	</style>
</resources>